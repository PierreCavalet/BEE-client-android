<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.pierrecavalet.bestexcuseever" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AddBeeActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".SignInActivity"
            android:screenOrientation="portrait"
            android:parentActivityName="fr.pierrecavalet.bestexcuseever.MainActivity">
        </activity>
        <activity android:name=".SignUpActivity"
            android:screenOrientation="portrait"
            android:parentActivityName="fr.pierrecavalet.bestexcuseever.SignInActivity">
        </activity>
    </application>

</manifest>
